{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch debug_rand",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/core/debug_rand",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "osx": {
                "MIMode": "lldb"
            },
            "linux": {
                "MIMode": "gdb"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cmake_for_debug",
        }
    ]
}
