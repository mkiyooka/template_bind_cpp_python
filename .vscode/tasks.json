{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}",
        "env": {
            "VIRTUAL_ENV": "${workspaceFolder}/.venv",
            "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
        }
    },
    "tasks": [
        {
            "label": "cmake_configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S.",
                "-Bbuild",
                "-DCMAKE_BUILD_TYPE=${input:buildType}",
                "-DPython_EXECUTABLE=${workspaceFolder}/.venv/bin/python"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "CMakeでビルドタイプを指定してセットアップを実行"
        },
        {
            "label": "cmake_build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "CMakeでビルドを実行",
            "dependsOn": [
                "cmake_configure"
            ]
        }
    ],
    "inputs": [
        {
            "id": "buildType",
            "description": "Select build type",
            "type": "pickString",
            "options": [
                "Debug",
                "Release",
                "RelWithDebInfo",
                "MinSizeRel"
            ],
            "default": "Debug"
        }
    ]
}