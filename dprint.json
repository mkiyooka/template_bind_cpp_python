{
    "$schema": "https://dprint.dev/schemas/v0.json",
    "indentWidth": 4,
    "useTabs": false,

    "includes": [
        "**/*.{json,jsonc,yaml,yml,toml,md,markdown}",
    ],
    "excludes": [
        "**/*-lock.json",
        "**/node_modules",
        "build/**",
        "dist/**",
        "__pycache__/**",
        "*.egg-info/**",
        ".venv/**",
        "venv/**",
        "ext/**",
        "third_party/**",
    ],

    "json": {
        "indentWidth": 4,
        "lineWidth": 80,
        "useTabs": false,
        "trailingCommas": "maintain",
    },

    "yaml": {
        "indentWidth": 4,
    },

    "toml": {
        "indentWidth": 4,
        "lineWidth": 80,
        "useTabs": false,
    },

    "plugins": [
        "https://plugins.dprint.dev/json-0.20.0.wasm",
        "https://plugins.dprint.dev/toml-0.7.0.wasm",
        "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm",
    ]
}
